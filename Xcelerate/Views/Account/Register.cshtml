@model RegisterViewModel

<link rel="stylesheet" href="~/css/Account/Register/Register.css" asp-append-version="true" />

<partial name="_WebsiteName">
</partial>

<article class="card-register">
	<form method="post" action="/Account/Register" class="card-content" id="card-content">
		@Html.AntiForgeryToken()
		<h1 class="title-text">REGISTRATION FORM</h1>

		<section class="names-inputs">
			<div class="first-name-input">
				<label asp-for="@Model.FirstName">First Name</label>
				<input type="text" name="FirstName" asp-for="@Model.FirstName" id="first-name" minlength="4" maxlength="30" placeholder="Enter your first name" />
				<span asp-validation-for="@Model.FirstName" class="text-danger"></span>
			</div>

			<div class="last-name-input">
				<label asp-for="@Model.LastName">Last Name</label>
				<input type="text" name="LastName" asp-for="@Model.LastName" id="last-name" minlength="4" maxlength="30" placeholder="Enter your last name" />
				<span asp-validation-for="@Model.LastName" class="text-danger"></span>
			</div>
		</section>

		<section class="other-forms">
			<label asp-for="@Model.Email">Email</label>
			<input type="email" name="Email" asp-for="@Model.Email" id="email-name" minlength="15" maxlength="30" placeholder="Enter your email address" />
			<span asp-validation-for="@Model.Email" class="text-danger"></span>

			<label asp-for="@Model.Password">Password</label>
			<input type="password" name="Password" asp-for="@Model.Password" id="password" minlength="8" maxlength="20" placeholder="Choose a strong password" />
			<span asp-validation-for="@Model.Password" class="text-danger"></span>

			<label asp-for="@Model.ConfirmPassword">Confirm Password</label>
			<input type="password" name="ConfirmPassword" asp-for="@Model.ConfirmPassword" id="password-confirm" placeholder="Re-enter your password" />
			<span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
		</section>


		<section class="check-box-input">
			<input type="checkbox" name="" id="check-box" />
			<label for="check-box">I&nbsp&nbspaccept the Terms of Use & Privacy Policy</label>
		</section>
		<recaptcha form-id="card-content" />
		<section class="button-object">
			<button class="register-button" type="submit">REGISTER</button>
		</section>
	</form>
</article>


@if (TempData.ContainsKey("ErrorMessage"))
{
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

	<script>
		Swal.fire({
			icon: 'error',
			title: 'Oops something happened!',
			text: '@TempData["ErrorMessage"]',
		});
	</script>
	{
		TempData.Remove("ErrorMessage");
	}
}

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script src="~/js/Register/Register.js" asp-append-version="true"></script>
	<recaptcha-script />
}



